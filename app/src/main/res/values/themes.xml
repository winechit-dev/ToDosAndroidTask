<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDosAndroidTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="titleTextColor">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="subtitleTextColor">@color/independence</item>
        <item name="itemTextColor">@color/independence</item>
        <item name="dividerColor">@color/bright_gray</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <item name="textAppearanceHeadlineLarge">@style/Theme.ToDosAndroidTask.Headline</item>
        <item name="textAppearanceSubtitle1">@style/Theme.ToDosAndroidTask.SubTitle</item>
        <item name="textAppearanceBodyMedium">@style/Theme.ToDosAndroidTask.Body</item>
    </style>
</resources>